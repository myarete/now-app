{
  "name": "now-app",
  "version": "0.1.0",
  "repository": "zeit/now-app",
  "scripts": {
    "start": "electron app/dist/electron",
    "postinstall": "install-app-deps && webpack",
    "dev": "webpack -w",
    "clean": "rm -rf node_modules app/node_modules dist app/dist",
    "build": "NODE_ENV=production webpack",
    "test": "ava && xo",
    "pack": "npm run build && build --dir"
  },
  "author": {
    "name": "Zeit, Inc.",
    "email": "team@zeit.co"
  },
  "build": {
    "appId": "co.zeit.now",
    "category": "public.app-category.developer-tools",
    "asar": false
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "space": true,
    "semicolon": false,
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "ava/no-ignored-test-files": 0,
      "react/jsx-filename-extension": 0,
      "no-unneeded-ternary": 0,
      "babel/no-await-in-loop": 0
    },
    "ignores": [
      "app/**"
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "greenkeeper": {
    "emails": false
  },
  "license": "MIT",
  "devDependencies": {
    "autosize-input": "^0.2.1",
    "ava": "^0.16.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "electron-builder": "^5.34.1",
    "electron-prebuilt": "^1.3.4",
    "eslint-config-xo-react": "^0.9.0",
    "eslint-plugin-react": "^6.1.2",
    "json-loader": "^0.5.4",
    "querystring": "^0.2.0",
    "raw-loader": "^0.5.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-slick": "^0.13.3",
    "react-svg-inline": "^1.2.0",
    "webpack": "^1.13.2",
    "webpack-livereload-plugin": "^0.8.2",
    "xo": "^0.16.0"
  }
}
