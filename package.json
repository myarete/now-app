{
  "name": "now-app",
  "version": "0.1.0",
  "repository": "zeit/now-app",
  "scripts": {
    "start": "electron app/dist/electron",
    "postinstall": "install-app-deps",
    "watch": "webpack -w",
    "watch-front": "npm run build-front -- -w",
    "watch-back": "npm run build-back -- -w",
    "build": "npm run build-front && npm run build-back",
    "build-front": "rollup -c rollup.config.react.js",
    "build-back": "rollup -c rollup.config.electron.js",
    "test": "ava && xo",
    "pack": "npm run build && build --dir"
  },
  "author": {
    "name": "Leo Lamprecht",
    "email": "leo@zeit.co"
  },
  "build": {
    "appId": "co.zeit.now",
    "category": "public.app-category.developer-tools",
    "asar": false
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "space": true,
    "semicolon": false,
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "ava/no-ignored-test-files": 0,
      "react/jsx-filename-extension": 0,
      "no-unneeded-ternary": 0
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "greenkeeper": {
    "emails": false
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.11.5",
    "babel-preset-react": "^6.11.1",
    "electron-builder": "^5.26.0",
    "electron-prebuilt": "^1.3.3",
    "eslint-config-xo-react": "^0.9.0",
    "eslint-plugin-react": "^6.1.2",
    "json-loader": "^0.5.4",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "webpack": "^1.13.2",
    "xo": "^0.16.0"
  }
}
