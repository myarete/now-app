{
  "name": "now-app",
  "version": "0.1.0",
  "repository": "zeit/now-app",
  "scripts": {
    "start": "electron app/dist/electron",
    "postinstall": "install-app-deps",
    "watch": "concurrently -k 'npm run watch-front' 'npm run watch-back' -p '[{name}]' -n 'react,electron'",
    "watch-front": "npm run build-front -- -w",
    "watch-back": "npm run build-back -- -w",
    "build": "npm run build-front && npm run build-back",
    "build-front": "rollup -c rollup.config.react.js",
    "build-back": "rollup -c rollup.config.electron.js",
    "test": "ava && xo",
    "pack": "npm run build && build --dir"
  },
  "author": {
    "name": "Leo Lamprecht",
    "email": "leo@zeit.co"
  },
  "build": {
    "appId": "co.zeit.now",
    "category": "public.app-category.developer-tools",
    "asar": false
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "ava/no-ignored-test-files": 0
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "greenkeeper": {
    "emails": false
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-react": "^6.11.1",
    "concurrently": "^2.2.0",
    "electron-builder": "^5.26.0",
    "electron-prebuilt": "^1.3.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "rollup": "^0.34.9",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "xo": "^0.16.0"
  }
}
